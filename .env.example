# Astramech Unified Environment Variables
# Copy this file to .env and fill in your values

# Environment
ENVIRONMENT=development

# Database
DATABASE_URL=postgresql+asyncpg://astramech:secret@postgres:5432/astramech

# Message Queue
RABBITMQ_URL=amqp://guest:guest@rabbitmq:5672/

# Cache & Task Queue
REDIS_URL=redis://redis:6379/0
CELERY_RESULT_BACKEND=redis://redis:6379/0

# Object Storage (MinIO)
MINIO_ENDPOINT=minio:9000
MINIO_ACCESS_KEY=minioadmin
MINIO_SECRET_KEY=minioadmin

# Finance Service (SuperVincent)
FINANCE_SERVICE_URL=http://finance-supervincent:8000
ALEGRA_EMAIL=your_alegra_email@example.com
ALEGRA_TOKEN=your_alegra_token_here

# JWT Authentication
JWT_SECRET=your-secret-key-change-in-production
JWT_ALGORITHM=HS256
JWT_EXPIRATION_HOURS=24

# External API Keys (Optional)
OPENAI_API_KEY=your_openai_key_here
TWILIO_ACCOUNT_SID=your_twilio_sid
TWILIO_AUTH_TOKEN=your_twilio_token
TIKTOK_ACCESS_TOKEN=your_tiktok_token
LINKEDIN_API_TOKEN=your_linkedin_token

# PostgreSQL (for docker-compose)
POSTGRES_PASSWORD=secret

# Ollama (if using local LLM)
OLLAMA_BASE_URL=http://localhost:11434
OLLAMA_MODEL=llama3.1:8b
